<form method="POST">
    <div class="form-group">
        <label for="firstName">First Name</label>
        <input
            type="text"
            class="form-control"
            name="firstName"
            id="formGroupExampleInput"
            placeholder="Shakira"
            required
        />
    </div>
    <div class="form-group">
        <label for="lastName">Last Name</label>
        <input
            type="text"
            class="form-control"
            name="lastName"
            id="formGroupExampleInput2"
            placeholder="Shakira"
            required
        />
    </div>
    <div class="form-group">
        <label for="email">Email Address</label>
        <input
            type="email"
            class="form-control"
            name="email"
            id="formGroupExampleInput"
            placeholder="mail@example.com"
            required
        />
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Password</label>
        <input
            type="password"
            class="form-control"
            name="password"
            id="formGroupExampleInput2"
            required
        />
    </div>
    <button type="submit" class="btn btn-primary">Sign in</button>
    <div class="member">
        <p>If you are already a member, please <a href="/login">log in</a>.</p>
    </div>
    <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
</form>

